mixin pagination(pagination)
    nav
        ul(class="pagination")
            if(pagination.currentPage > 1)
                li(class="page-item")
                    button(
                    class="page-link"
                    button-pagination=1
                ) Trang đầu
                li(class="page-item")
                    button(class="page-link"
                    button-pagination = pagination.currentPage - 1) Trang trước
                
            - for (var i = 1; i <= pagination.total; i++)
                li(class=("page-item " + (pagination.currentPage == i ? "active" : "")))
                    button(class="page-link" button-pagination = i ) #{i}
            if(pagination.currentPage < pagination.total)
                li(class="page-item")
                    button(class="page-link"
                    button-pagination = pagination.currentPage + 1) Kế tiếp
                li(class="page-item")
                    button(
                    class="page-link"
                    button-pagination=pagination.total
                    ) Trang cuối