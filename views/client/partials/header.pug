include ../mixin/sub-menu.pug
header.header
  .container
    .row.align-items-center
      .col-3
        .inner-logo
          a(href="/")
            img(src=setting.logo, alt="Logo")

      .col-5
        form(
          action="/search"
          method="GET"
        ) 
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-primary"
            ) Tìm

      .col-4
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li(class="sub-menu")
              a(href="/products") Sản phẩm
              if(layoutCategoryProducts)
                +sub-menu(layoutCategoryProducts)
            li
              a(href="/carts") Giỏ Hàng (#{cartTotal})
            if(user)
              li
                a(href="/users/profile") #{user.fullname}
              li
                a(href="/chat") Chat
              li
                a(href="/users/logout") Đăng xuất
            else
              li
                a(href="/users/login") Đăng nhập
              li
                a(href="/users/register") Đăng ký